
<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <% posts.forEach(function(post){ %>
    <h1>
      <%= post.title %>
    </h1>
    <p>
      <% if (post.content) { %>
        <%= post.content.substring(0, 100) + " ..." %>
          <% } else { %>
            return ; 
            <% } %>
              <a href="/posts/<%= post._id %>">Read More</a>
    </p>
    <% }) %>


<%- include("partials/footer"); -%>
